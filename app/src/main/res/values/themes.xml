<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RentRight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2D2D2D</item> <!-- Dark Gray -->
        <item name="colorPrimaryVariant">#1A1A1A</item> <!-- Almost Black -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- White -->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#E0E0E0</item> <!-- Light Gray -->
        <item name="colorSecondaryVariant">#B4B4B4</item> <!-- Medium Gray -->
        <item name="colorOnSecondary">#000000</item> <!-- Black -->


    </style>

    <style name="Theme.RentRight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RentRight.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RentRight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>